# BASE DE DATOS MONGODB
# Para desarrollo local con MongoDB instalado:
MONGO_URI=mongodb://127.0.0.1:27017/happiety-dev

# Para MongoDB Atlas (producción/nube):
# MONGO_URI=mongodb+srv://usuario:password@cluster.mongodb.net/happiety?retryWrites=true&w=majority

# SERVIDOR
PORT=3000

# AUTENTICACIÓN JWT
# ⚠️ IMPORTANTE: Cambia este secreto por uno único y seguro
JWT_SECRET=tu_clave_secreta_super_segura_de_256_bits_aqui
JWT_EXPIRES_IN=7d

# ENTORNO DE DESARROLLO
NODE_ENV=development

